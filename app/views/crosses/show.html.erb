<% 
if user_signed_in?
if g_user.id == current_user.id
%>
<p>
  <a href="<%= short_path %>" class="button small disabled">Fly view</a>
  <a href="<%= short_path %>/chr" class="button small secondary">Chromosome view</a>
</p>
<% end end %>

    <% counter = 0 %>
<% @progeny.each do |p| %>
	<% semikolon = 0 %>

<% #Check for lethal and balancers %>
<% death = 0 %>
	<% p.each do |chr| %>
		<% if chr.size == 1 %>
			<% chr.each do |n| %>
				<% n = n.split(',') %>
				<% @balancers.each do |b| %>
					<% n.each do |g| %>
					<% if g == b %>
						<% death = 1 %>
					<% end %>
					<% end %>
				<% end %>

				<% @lethal.each do |l| %>
					<% n.each do |g| %>
					<% if g == l %>
						<% death = 1 %>
					<% end %>
					<% end %>
				<% end %>
			<% end %>
		<% else 
			up = chr.to_a[0].split(',')
			down = chr.to_a[1].split(',')

			up.each do |u|
				down.each do |d|

							if u == d
								@balancers.each do |b|
									if u == b
										death = 1
									end
								end
								@lethal.each do |l|
									if u == l
										death = 1
									end
								end
							end
				end
			end
	    end %>
	<% end %>

	<% if death != 1 %>
		
		<div class="button small secondary">

		\[
	<% p.each do |chr| %>
		<% if chr.size > 1 %>
			<% if semikolon != 0 %>;<% end %>
			\dfrac
			<% chr.each do |n| %>
				{<%= n %>}
			<% end %>
		<% else %>
			<% if semikolon != 0 %>;<% end %>
			<% chr.each do |n| %>
				<%= n %>
			<% end %>
		<% end %> 
		<% semikolon = 1 %>
	<% end %>
	\]

<% 
if user_signed_in?
if g_user.id == current_user.id
	%>
&#x2642;
<%= f.radio_button(:male_id, @prog_id[counter], label: false) %>
 | &#x2640;
<%= f.radio_button(:female_id, @prog_id[counter], label: false) %>
 | <a href="<%= request.base_url %>/stocks/n/<%= @prog_id[counter] %>">Stock_it</a>
<% end 
end %>

</div>
	<% counter = counter + 1 %>
<% end %>
<% end %>

</div>

<% 
if user_signed_in?
if g_user.id == current_user.id
	%>
<h3>Next cross</h3>
<div class="panel">
<%= f.hidden_field(:balancers, :value => @balancer_string) %>
<%= f.hidden_field(:lethal, :value => @lethal_string) %>
<%= f.hidden_field(:parent, :value => @cross.id) %>
<%= f.hidden_field(:link, :value => @random_string) %>

<p>
<a href="#" data-reveal-id="newfly" class="button small secondary">Add new fly to cross</a>
<div id="newfly" class="reveal-modal" data-reveal>

<div class="panel">
  <h5>Genotype</h5>
&#x2642;
<%= f.radio_button(:male_id, "new", label: false) %>
 | &#x2640;
<%= f.radio_button(:female_id, "new", label: false) %>  
<h6>Separate sister chromosomes with a slash [/] and alleles on the same chromosome with a comma [,]</h6>
    <div class="row">
      <div class="large-6 columns">
        <label>X chromosome
          <%= f.text_field :X, :value => "+/+" %>
        </label>
      </div>
      <div class="large-6 columns">
        <label>Chromosome 2
          <%= f.text_field :II, :value => "+/+" %>
        </label>
      </div>
      <div class="large-6 columns">
        <label>Chromosome 3
          <%= f.text_field :III, :value => "+/+" %>
        </label>
      </div>
      <div class="large-6 columns">
        <label>Chromosome 4
          <%= f.text_field :IV, :value => "+/+" %>
          </label>
      </div>
    </div>
</div>

<a class="close-reveal-modal">&#215;</a>
</div>
</p>
  <h5>Lethal alleles</h5>
        <label>Alleles separated by semicolon (;)
          <%= f.text_field :lethal %>
        </label>
  <h5>Balancers</h5>
        <label>Balancers separated by semicolon (;)
          <%= f.text_field :balancers %>
        </label>
  <h5>Comments</h5>
        <label>Describe this cross
          <%= f.text_field :description %>
        </label>       
<h5>Date of cross</h5>
<%= f.date_select(:crossdate, selected: Date.today) %>

<%= f.submit 'Cross' %>
</div>
<% end %>

<% end 
end%>