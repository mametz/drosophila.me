<div class="white-bg">
<h2>Forgot your password?</h2>
<div class="panel">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, auto_labels: false) do |f| %>
  <%= devise_error_messages! %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: 'button small success' %>
    <%= render "devise/shared/links" %>
  </div>
<% end %>
</div>
</div>
