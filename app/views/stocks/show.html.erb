<div class="white-bg">
<nav aria-label="You are here:" role="navigation">
  <ul class="breadcrumbs">
    <li><a href="<%= request.base_url %>">Drosophila.me</a></li>
    <li><a href="<%= request.base_url %>/stocks">Stocks</a></li>
    <li>
      <span class="show-for-sr">Current: </span> Show stock
          </li>
  </ul>
</nav>
<h1>Stock n. <%= @stock.number %></h1>
<a href="<%= new_stock_path %>" class="button small secondary">New Stock</a>
<div class="panel">
  <p>
    <strong>Genotype:</strong>
    <% fly = Fly.find(@stock.fly_id) %>
    <%= fly.chr1 %> ; <%= fly.chr2 %> ; <%= fly.chr3 %> ; <%= fly.chr4 %>
  </p>
  <p>
    <strong>Stock room:</strong>
    <% if @room != nil %>
      <%= @room.name %>
    <% end %>
  </p>
  <p>
    <strong>Comment:</strong>
    <%= @stock.comment %>
  </p>
  <p>
    <strong>Date established:</strong>
    <% if @stock.date_established != nil %>
      <%= @stock.date_established.strftime("%B %d, %Y") %>
    <% end %>
  </p>
  <p>
    <strong>Reference:</strong>
    <%= @stock.reference %>
  </p>
  <p>
    <strong>Received from:</strong>
    <%= @stock.received_from %>
  </p>
  <a href="<%= @stock.id %>/edit" class="button small secondary"><i class="fi-page-edit" ></i> Edit</a>
  <%= link_to @stock, method: :delete, data: { confirm: "Are you sure?" }, class: "button small alert" do %>
    <i class="fi-trash" ></i> Delete stock
  <% end %>
</div>
</div>