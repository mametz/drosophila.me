<p id="notice"><%= notice %></p>

<h1>Listing Stocks</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Name</th>
      <th>Fly</th>
      <th>Lab</th>
      <th>User</th>
      <th>Comment</th>
      <th>Date established</th>
      <th>Room</th>
      <th>Reference</th>
      <th>Received from</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stocks.each do |stock| %>
      <tr>
        <td><%= stock.number %></td>
        <td><%= stock.name %></td>
        <td><%= stock.fly_id %></td>
        <td><%= stock.lab_id %></td>
        <td><%= stock.user_id %></td>
        <td><%= stock.comment %></td>
        <td><%= stock.date_established %></td>
        <td><%= stock.room_id %></td>
        <td><%= stock.reference %></td>
        <td><%= stock.received_from %></td>
        <td><%= link_to 'Show', stock %></td>
        <td><%= link_to 'Edit', edit_stock_path(stock) %></td>
        <td><%= link_to 'Destroy', stock, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

